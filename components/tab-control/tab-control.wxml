<!--components/tab-control/tab-control.wxml-->
<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="tab-control-item" bindtap="handleTabControl"
          data-type="{{item}}" 
          data-index="{{index}}"
          >
      <text class="{{currentIndex === index ? 'active' : ''}}">{{item}}</text>
    </view>
  </block>
</view>
