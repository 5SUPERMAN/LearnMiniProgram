/* components/goods-item/goods-item.wxss */
.goods-item{
  text-align: center;
  color: #333;
  padding-bottom: 95rpx;
}

.image{
  width: 100%;
  border-radius: 10rpx;
}

.desc-info{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 15rpx;
}

.title{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.price{
  color: #ff5777;
  padding-right: 20rpx;
  font-size: 24rpx;
}

.icon{
  position: relative;
  width: 30rpx;
  height: 30rpx;
  top: 6rpx;
}

.cfav{
  padding-right: 20rpx;
  font-size: 24rpx;
}